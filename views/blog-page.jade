extends layout

block vars
  - var description = 'Welcome to my page'
  - var additionalCssFiles = []
  - var additionalJsFiles = ['https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular.min.js', 'https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-rc.0/angular-animate.min.js', 'controllers/blogPostsController.js']

block content  
    h1= title
    
    div(ng-controller="BlogPostsCtrl")
        ul
            li(ng-repeat="post in posts")
                a(href="/blog/{{post.url}}") {{post.title}}
                p {{post.meta}}
                ul
                    li(ng-repeat="tag in post.tags")
                        a(href="/blog/tag/{{tag}}")
                            {{tag}}
