extends layout

block vars
  - var description = 'Welcome to my page'
  - var additionalCssFiles = []
  - var additionalJsFiles = ['https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular.min.js', 'https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-rc.0/angular-animate.min.js', 'controllers/articlesController.js']

block content  
    h1= title
    
    div(ng-controller="ArticlesCtrl")
        ul
            li(ng-repeat="article in articles")
                a(href="{{article.url}}", target="_blank"){{article.title}}
                p {{article.desc}}
