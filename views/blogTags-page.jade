extends layout

block vars
  - var description = 'Blog Tags'
  - var additionalCssFiles = []
  - var additionalJsFiles = ['https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.0/angular.min.js', 'https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-rc.0/angular-animate.min.js', '/controllers/blogTagsController.js']

block content  
    h1= title
    
    div(ng-controller="BlogTagsCtrl")
        ul.list-standard
            li.list-standard__item.padding-1(ng-repeat="post in posts")
                h2
                    a(href="/blog/{{post.url}}") {{post.title}}
                p {{post.meta}}
                ul.tags-list
                    li.tag Tags:
                    li.tag(ng-repeat="tag in post.tags")
                        a(href="/blog/tags/{{tag}}")
                            {{tag}}
                    
